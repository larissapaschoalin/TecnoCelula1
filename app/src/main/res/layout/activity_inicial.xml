<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    tools:context="com.example.usuario.tecnocelula1.InicialActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="254dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/ifpr_logo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="26dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/button_inicio"
        android:layout_width="114dp"
        android:layout_height="105dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="#ffffff"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/inicio_inicio"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.596" />

    <ImageButton
        android:id="@+id/buttonCamera"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="#ffffff"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/camera"
        app:layout_constraintLeft_toRightOf="@+id/button_inicio"
        android:layout_marginLeft="7dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.603" />

    <ImageButton
        android:id="@+id/lbuttonInfo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:background="#ffffff"
        android:scaleType="centerInside"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/buttonCamera"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/info"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.603" />

</android.support.constraint.ConstraintLayout>
